<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Maui.Controls.Sample"
             x:Class="Maui.Controls.Sample.ShellTabPage"
             Title="ShellTabPage"
             TabBarBackgroundColor="LightBlue"
             TabBarUnselectedColor="Red">
    <TabBar x:Name="mainTabBar">
                 <Tab Title="Tab1"
                     Icon="coffee.png">
                       <ShellContent x:Name="tab1Item"
                                      Title="shellTab1">
                                <ContentPage Title="Tab1 Content">
                                        <Label Text="Welcome to Tab 1" AutomationId="Tab2Label"/>
                                </ContentPage>
                        </ShellContent>
                </Tab>
                <Tab Title="Tab2" AutomationId="Tab2" IsEnabled="False"
                     Icon="bank.png">
                        <ShellContent x:Name="tab2Item"
                                      Title="shellTab2">
                                <ContentPage Title="Tab2 Content">
                                        <Label Text="Welcome to Tab 2" AutomationId="Tab2Label"/>
                                </ContentPage>
                        </ShellContent>
                </Tab>
                <Tab Title="Tab3" AutomationId="Tab3"
                     Icon="menu_icon.png">
                        <ShellContent x:Name="tab3Item"
                                      Title="ShellTab3">
                                 <ContentPage Title="Tab3 Content">
                                         <Label Text="Welcome to Tab 3" AutomationId="Tab3Label"/>
                                 </ContentPage>
                        </ShellContent>
                </Tab>  
        </TabBar>
</Shell>
